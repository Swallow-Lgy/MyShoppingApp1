<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    >
       <ImageView
           android:layout_width="@dimen/dp_24"
           android:layout_height="@dimen/dp_20"
           android:background="@mipmap/common_btn_menu"
           android:layout_marginTop="@dimen/dp_37"
           android:layout_marginLeft="@dimen/dp_24"
           android:id="@+id/home_sesrch_but"
           android:layout_marginRight="@dimen/dp_12"
           />
       <EditText
           android:id="@+id/home_sesrch_edit"
           android:layout_width="@dimen/dp_230"
           android:layout_height="@dimen/dp_30"
           android:layout_marginTop="@dimen/dp_33"
           android:layout_toRightOf="@id/home_sesrch_but"
           android:layout_marginRight="@dimen/dp_5"
           android:background="@drawable/search_bg"
           android:paddingLeft="@dimen/dp_20"
           android:visibility="invisible"
           />

        <TextView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_25"
        android:id="@+id/home_sesrch_text"
        android:layout_toRightOf="@id/home_sesrch_edit"
        android:text="搜索"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_37"
        android:textSize="@dimen/sp_14"
         android:visibility="gone"
        />
      <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/search"
        android:id="@+id/home_sesrch_but1"
        android:layout_toRightOf="@id/home_sesrch_edit"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_37"

          />
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/home_sesrch_but"
               android:layout_marginTop="@dimen/dp_20"
               android:id="@+id/home_scroll"

               >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/home_relative"
                   android:clipChildren="false"
                   >
                   <android.support.v4.view.ViewPager
                       android:layout_width="@dimen/dp_280"
                       android:layout_height="@dimen/dp_150"
                       android:id="@+id/home_viewpager"
                       android:layout_centerHorizontal="true"
                       android:layout_marginBottom="@dimen/dp_30"
                       >

                   </android.support.v4.view.ViewPager>
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_30"
                      android:background="@mipmap/bg_rxxp_syf"
                      android:layout_below="@id/home_viewpager"

                      />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="热销新品"
                       android:textSize="@dimen/sp_16"
                       android:textColor="#ff7f57"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="@dimen/dp_2"
                       android:id="@+id/hot_new_goods"
                       android:layout_below="@id/home_viewpager"
                       />
                   <ImageView
                       android:id="@+id/home_newhot_more"
                       android:layout_width="@dimen/dp_24"
                       android:layout_height="@dimen/dp_5"
                       android:background="@mipmap/common_btn_more_yellow_n"
                       android:layout_marginRight="@dimen/dp_24"
                       android:layout_toRightOf="@id/hot_new_goods"
                       android:layout_marginLeft="@dimen/dp_100"
                       android:layout_below="@id/home_viewpager"
                       android:layout_marginTop="@dimen/dp_20"
                       />
                   <android.support.v7.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_166"
                       android:layout_below="@id/home_newhot_more"
                       android:layout_marginTop="@dimen/dp_10"
                       android:id="@+id/home_hot_recycle"
                       android:layout_centerHorizontal="true"
                       android:layout_marginLeft="@dimen/dp_24"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_10"
                       android:background="#f5f5f5"
                       android:layout_below="@id/home_hot_recycle"
                       android:layout_marginTop="@dimen/dp_10"
                       android:id="@+id/text1"

                       />
                   <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_30"
                   android:background="@mipmap/bg_mlss_syf"
                   android:layout_below="@id/text1"
                   android:layout_marginTop="@dimen/dp_10"
                   android:id="@+id/fashion_image"
                   />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="魔力时尚"
                       android:textSize="@dimen/sp_16"
                       android:textColor="#6600ff"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="@dimen/dp_10"
                       android:id="@+id/fashion_goods"
                       android:layout_below="@id/text1"
                       />
                   <ImageView
                       android:id="@+id/fashion_more"
                       android:layout_width="@dimen/dp_24"
                       android:layout_height="@dimen/dp_5"
                       android:background="@mipmap/home_btn_more_purple_n"
                       android:layout_marginRight="@dimen/dp_24"
                       android:layout_toRightOf="@id/hot_new_goods"
                       android:layout_marginLeft="@dimen/dp_100"
                       android:layout_below="@id/text1"
                       android:layout_marginTop="@dimen/dp_20"
                       />

                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/home_fashion_recycle"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/fashion_image"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_marginTop="17dp"
                       android:layout_marginRight="@dimen/dp_10" />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_10"
                       android:background="#f5f5f5"
                       android:layout_below="@id/home_fashion_recycle"
                       android:id="@+id/text2"
                       />
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@mipmap/bg_pzsh_syf"
                       android:layout_below="@id/text2"
                       android:id="@+id/life_image"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="品质生活"
                       android:textSize="@dimen/sp_16"
                       android:textColor="#FF6666"
                       android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_15"
                       android:id="@+id/life_goods"
                       android:layout_below="@id/home_fashion_recycle"
                       />
                   <ImageView
                       android:id="@+id/life_more"
                       android:layout_width="@dimen/dp_24"
                       android:layout_height="@dimen/dp_5"
                       android:background="@mipmap/home_btn_moer_pink_n"
                       android:layout_marginRight="@dimen/dp_24"
                       android:layout_toRightOf="@id/hot_new_goods"
                       android:layout_marginLeft="@dimen/dp_100"
                       android:layout_below="@id/text2"
                       android:layout_marginTop="@dimen/dp_20"
                       />
                   <android.support.v7.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/life_image"
                       android:id="@+id/home_life_recycle"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_marginRight="@dimen/dp_10"
                       android:layout_marginTop="@dimen/dp_20"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_80"
                       android:layout_below="@id/home_life_recycle"
                       android:textColor="#f5f5f5"
                       />
               </RelativeLayout>
           </ScrollView>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_home_more"
          android:layout_below="@id/home_scroll"
          android:visibility="gone"
          android:layout_marginTop="@dimen/dp_20"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/bg_rxxp_syf"
            android:id="@+id/home_more_bg"
            />
          <TextView
              android:id="@+id/home_more_headline"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:textSize="@dimen/sp_14"
              android:text="11111111111111111111"
              />
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_more_headline"
            android:id="@+id/home_more_recycle"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_relative"
        android:layout_below="@id/home_scroll"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_25"
        >
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/home_search_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/two_list_relative"
        android:layout_below="@id/home_sesrch_edit"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        >
       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_43"
           android:background="@mipmap/bg_one"
           android:id="@+id/home_one_list"
           />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:id="@+id/home_two_list"
            android:layout_below="@id/home_one_list"
            android:background="#bfc1c1c1"
            >
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_sesrch_edit"
        android:id="@+id/home_none_goods"
        android:visibility="gone"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/meiyoushop"
        />
    </RelativeLayout>
</RelativeLayout>