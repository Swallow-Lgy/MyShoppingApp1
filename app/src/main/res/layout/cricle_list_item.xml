<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_20"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/criclelinear"
        android:background="@drawable/criclelistback"
        android:orientation="horizontal"
        >
      <ImageView
          android:layout_width="@dimen/dp_50"
          android:layout_height="@dimen/dp_50"
          android:layout_marginTop="@dimen/dp_10"
          android:layout_marginLeft="@dimen/dp_10"
          android:id="@+id/cricle_list_headicon"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cricle_list_name"
            android:layout_toRightOf="@id/cricle_list_headicon"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="小白妞"
            android:textSize="14sp"
            android:textColor="#666666"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-13 13:00"
            android:layout_toRightOf="@id/cricle_list_name"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_110"
            android:textSize="@dimen/dp_10"
            android:textColor="#666666"
            android:id="@+id/cricle_list_time"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@id/cricle_list_headicon"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"
            android:id="@+id/cricle_list_comment"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:id="@+id/cricle_list_shapeicon"
            android:layout_below="@id/cricle_list_comment"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/cricle_list_click"
            android:layout_below="@id/cricle_list_shapeicon"
            android:layout_marginLeft="@dimen/dp_250"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@mipmap/common_btn_prise_n"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cricle_list_num"
            android:layout_below="@id/cricle_list_shapeicon"
            android:layout_toRightOf="@id/cricle_list_click"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="23"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"

            />
   </RelativeLayout>

</RelativeLayout>