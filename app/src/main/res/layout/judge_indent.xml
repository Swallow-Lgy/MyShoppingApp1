<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_3"
        android:background="@drawable/criclelistback"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_10">
        <TextView
            android:id="@+id/judge_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#666"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/judge_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@id/judge_code"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/judge_code"
            android:id="@+id/judge_item_recycler"
            android:layout_width="@dimen/dp_292"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/judge_item_more"
            android:layout_width="@dimen/dp_24"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/judge_code"
            android:layout_alignBottom="@id/judge_code"
            android:layout_alignParentRight="true"
            android:textColor="#666"
            android:text="···"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/judge_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            android:layout_below="@id/judge_item_recycler"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>