<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/criclelistback"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_90"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/home_fashion_image"
            android:layout_marginTop="@dimen/dp_10"
            />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_fashion_image"
             android:maxLines="3"
             android:ellipsize="end"
             android:id="@+id/home_fashion_goodsname"
             android:layout_marginRight="@dimen/dp_20"
             android:layout_marginLeft="@dimen/dp_10"
             android:textSize="@dimen/sp_12"
             android:textColor="#666666"
             android:layout_marginTop="@dimen/dp_20"

             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/home_fashion_goodsprice"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"
            android:textColor="#ff00"
            android:layout_below="@id/home_fashion_goodsname"
            android:layout_toRightOf="@id/home_fashion_image"
            />
    </RelativeLayout>
</RelativeLayout>