<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopcar_recycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_472"
        android:layout_marginTop="@dimen/dp_30"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/shopcar_recycle"
        android:id="@+id/shopcar_buttom_relative"
        >

        <LinearLayout
            android:id="@+id/shopcar_buttom_linear"
            android:layout_width="@dimen/dp_240"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/shopcar_select_all"
              android:layout_marginLeft="@dimen/dp_20"
              android:layout_marginTop="@dimen/dp_2"
              />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="全选"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="合计："
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#ff00"
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/totalprice"
                android:text="0.0"
                />
        </LinearLayout>
        <Button
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/shopcar_buttom_linear"
            android:textColor="#ffff"
            android:background="#ff00"
            android:text="去结算"
            android:textSize="16sp"
            android:id="@+id/gosettel"
            />

    </RelativeLayout>
</RelativeLayout>