<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show.my.activity.WalletActivity">
      <ImageView
           android:layout_width="@dimen/dp_312"
           android:layout_height="@dimen/dp_156"
           android:id="@+id/wallet_icon"
           android:background="@mipmap/bg_group"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/dp_40"

          />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/sp_18"
              android:textColor="#343434"
              android:text="余额"
             android:layout_marginTop="@dimen/dp_70"
              android:layout_marginLeft="@dimen/dp_35"
              android:id="@+id/yue"
              />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/yue"
          android:textSize="@dimen/sp_36"
          android:text="1000000"
          android:layout_marginLeft="@dimen/dp_40"
          android:textColor="#343434"
          android:id="@+id/moeny"
          />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="消费金额"
              android:textColor="#666666"
              android:textSize="@dimen/sp_14"
              android:layout_below="@id/wallet_icon"
              android:layout_marginLeft="@dimen/dp_60"
              android:layout_marginTop="@dimen/dp_10"
              android:id="@+id/consume_money"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="|"
              android:id="@+id/fenge"
              android:layout_toRightOf="@id/consume_money"
              android:layout_marginLeft="@dimen/dp_50"
              android:background="#0000"
              android:layout_below="@id/wallet_icon"
              android:layout_marginTop="@dimen/dp_13"
              />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="消费时间"
               android:textColor="#666666"
               android:textSize="@dimen/sp_14"
               android:layout_below="@id/wallet_icon"
               android:layout_toRightOf="@id/fenge"
               android:layout_marginLeft="@dimen/dp_80"
               android:layout_marginTop="@dimen/dp_10"
               android:id="@+id/consume_time"
               />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/wallet_recycle"
        android:layout_width="@dimen/dp_312"
        android:layout_height="match_parent"
        android:layout_below="@id/consume_money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>