<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show.indent.activity.CreatIndentActivity">

   <RelativeLayout
       android:id="@+id/creat_intent_address"
       android:layout_width="@dimen/dp_312"
       android:layout_height="@dimen/dp_98"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="@dimen/dp_43"
       android:background="@drawable/criclelistback"
        >
       <TextView
           android:layout_width="@dimen/dp_50"
           android:layout_height="wrap_content"
           android:text="李小二"
           android:textColor="#666666"
           android:textSize="@dimen/sp_14"
           android:layout_marginTop="@dimen/dp_18"
           android:id="@+id/indent_name"
           android:layout_marginLeft="@dimen/dp_10"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/indent_phone"
           android:layout_toRightOf="@id/indent_name"
           android:layout_marginLeft="@dimen/dp_170"
           android:layout_marginTop="@dimen/dp_18"
           android:text="13800138000"
           android:textSize="@dimen/sp_12"
           android:textColor="#666666"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/indent_address"
           android:layout_below="@id/indent_name"
           android:layout_marginTop="@dimen/dp_10"
           android:layout_marginLeft="@dimen/dp_10"
           android:textSize="@dimen/sp_12"
           android:textColor="#666666"
           android:text="北京市 海淀区 八维"
           />
       <ImageView
           android:layout_width="@dimen/dp_12"
           android:layout_height="@dimen/dp_11"
           android:layout_below="@+id/indent_address"
           android:layout_marginTop="@dimen/dp_12"
           android:layout_centerHorizontal="true"
           android:background="@drawable/creation_image_pop_check"
           android:id="@+id/pop_show_address"
           android:padding="@dimen/dp_5"
           />
   </RelativeLayout>
     <android.support.v7.widget.RecyclerView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/creat_indet_recycle"
         android:layout_marginTop="@dimen/dp_20"
         android:layout_below="@id/creat_intent_address"
         android:layout_marginLeft="@dimen/dp_20"
         android:layout_marginRight="@dimen/dp_20"
         android:background="@drawable/criclelistback"
         >
     </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@id/creat_indet_recycle"
        />
    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_50"
         android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/creat_linea"
        android:background="@drawable/creatindebt_bottom_bg"
        android:layout_marginLeft="@dimen/dp_3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_50"
            android:textColor="#666666"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/creat_indent_sum"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#ff00"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品，"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#666666"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:text="需付款"
            android:textColor="#666666"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/creat_indent_sumprice"
             android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="1dp"
            android:text="1111"
            android:textSize="@dimen/sp_14"
            android:textColor="#ff00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:text="元"
            android:layout_marginTop="@dimen/dp_20"
            />
    </LinearLayout>

    <Button
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_50"
         android:id="@+id/creat_submit_indent"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/creat_linea"
        android:background="#ff00"
        android:text="提交订单"
        android:textColor="#ffff"
        android:textSize="@dimen/sp_16"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>