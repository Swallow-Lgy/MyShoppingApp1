<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show.my.activity.CricleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的圈子"
            android:id="@+id/wdqz"
            android:textSize="@dimen/sp_16"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            />
        <Button
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/common_btn_delete_n"
            android:layout_toRightOf="@id/wdqz"
            android:layout_marginTop="@dimen/dp_40"
           android:layout_marginLeft="@dimen/dp_100"
            android:id="@+id/my_cricle_delete"
            />
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="@dimen/dp_300"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/wdqz"
            android:layout_marginTop="@dimen/dp_18"
            android:id="@+id/my_cricle_recycle"
            />

    </RelativeLayout>
</RelativeLayout>