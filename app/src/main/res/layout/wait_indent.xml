<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content"

    >
   <RelativeLayout
       android:layout_width="@dimen/dp_312"
       android:layout_height="wrap_content"
       android:background="@drawable/criclelistback"
       android:layout_marginBottom="@dimen/dp_10"
       android:elevation="@dimen/dp_3"
       android:layout_marginTop="@dimen/dp_5"
       android:padding="@dimen/dp_10"
       >
       <TextView
           android:id="@+id/wait_code"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="订单号"
           android:layout_marginBottom="@dimen/dp_10"
           android:textColor="#666"
           android:textSize="@dimen/sp_12"
           android:layout_marginRight="@dimen/dp_10"
           />
       <TextView
           android:id="@+id/wait_item_code"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#666"
           android:textSize="@dimen/sp_12"
           android:layout_toRightOf="@id/wait_code"
           />
       <TextView
           android:id="@+id/wait_item_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@id/wait_code"
           android:layout_alignBottom="@id/wait_code"
           android:textSize="@dimen/sp_12"
           android:textColor="#666"
           android:layout_alignParentRight="true"
           />
       <android.support.v7.widget.RecyclerView
           android:layout_below="@+id/wait_code"
           android:id="@+id/wait_item_recycler"
           android:layout_width="@dimen/dp_292"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/wait_quick"
           android:layout_below="@+id/wait_item_recycler"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_marginBottom="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           android:textColor="#666"
           android:textSize="@dimen/sp_12"
           android:text="派件公司"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
       <TextView
           android:id="@+id/wait_quickly"
           android:layout_below="@+id/wait_quick"
           android:layout_marginBottom="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#666"
           android:textSize="@dimen/sp_12"
           android:text="快递单号"
           />
       <TextView
           android:id="@+id/wait_quick_type"
           android:layout_toRightOf="@id/wait_quick"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#666"
           android:textSize="@dimen/sp_12"
           android:layout_alignBottom="@id/wait_quick"
           android:layout_alignTop="@id/wait_quick"
           />
       <TextView
           android:id="@+id/wait_quickly_code"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#666"
           android:textSize="@dimen/sp_12"
           android:layout_toRightOf="@id/wait_quickly"
           android:layout_alignBottom="@id/wait_quickly"
           android:layout_alignTop="@id/wait_quickly"
           />
       <Button
           android:id="@+id/wait_but"
           android:layout_width="@dimen/dp_70"
           android:layout_height="@dimen/dp_26"
           android:text="确认收货"
           android:textColor="#fff"
           android:background="@drawable/all_indent_butpay_bg"
           android:layout_alignParentRight="true"
           android:layout_alignBottom="@id/wait_quickly"
           />
   </RelativeLayout>
</RelativeLayout>