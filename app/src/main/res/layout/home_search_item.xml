<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/dp_151"
    android:layout_height="@dimen/dp_174"
    android:layout_marginTop="@dimen/dp_15"
     android:layout_marginLeft="@dimen/dp_10"
    >
    <RelativeLayout
        android:layout_width="@dimen/dp_151"
        android:layout_height="@dimen/dp_174"
        android:background="@drawable/criclelistback"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/home_moregs_icon"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:id="@+id/home_moregs_title"
            android:layout_below="@id/home_moregs_icon"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_moregs_price"
            android:layout_below="@id/home_moregs_title"
            android:layout_marginLeft="@dimen/dp_15"
             android:textColor="#ff00"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_moregs_sales"
            android:layout_below="@id/home_moregs_title"
            android:layout_marginLeft="@dimen/dp_50"
            android:textColor="#666666"
            android:textSize="@dimen/sp_10"
            android:layout_toRightOf="@id/home_moregs_price"
            android:layout_marginTop="@dimen/dp_5"
            />
    </RelativeLayout>
</RelativeLayout>