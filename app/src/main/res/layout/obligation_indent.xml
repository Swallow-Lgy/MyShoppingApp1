<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:id="@+id/relative"
        android:background="@drawable/criclelistback"
        android:layout_marginBottom="@dimen/dp_10"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="订单号"
          android:textSize="@dimen/sp_14"
          android:textColor="#666666"
          android:layout_marginTop="@dimen/dp_10"
          android:layout_marginLeft="@dimen/dp_10"
          android:id="@+id/indent_howl"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="WD20180930884324"
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_toRightOf="@id/indent_howl"
          android:layout_marginTop="@dimen/dp_14"
          android:id="@+id/obligation_indent_num"
          android:textSize="@dimen/sp_10"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/obligation_indent_data"
          android:text="2018-09-30"
          android:layout_marginLeft="@dimen/dp_80"
          android:layout_toRightOf="@id/obligation_indent_num"
          android:layout_marginTop="@dimen/dp_14"
          android:textSize="@dimen/dp_8"
          />
        <android.support.v7.widget.RecyclerView
            android:layout_width="@dimen/dp_325"
            android:layout_height="wrap_content"
            android:id="@+id/obligation_indent_recycle"
            android:layout_below="@id/indent_howl"
            android:layout_marginTop="@dimen/dp_10"
           android:layout_marginLeft="@dimen/dp_15"
            >
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/obligation_indent_recycle"
            android:orientation="horizontal"
            android:id="@+id/all_linea"
            android:layout_marginLeft="@dimen/dp_60"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_50"
                android:textColor="#666666"
                />

            <TextView
                android:id="@+id/obligation_indent_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="4"
                android:textColor="#ff00"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件商品，"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#666666"
                android:layout_marginLeft="1dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:text="需付款"
                android:textColor="#666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/obligation_indent_sumprice"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="1dp"
                android:text="1111"
                android:textSize="@dimen/sp_14"
                android:textColor="#ff00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="元"
                android:layout_marginTop="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_20"
                />
        </LinearLayout>
         <Button
             android:layout_width="@dimen/dp_70"
             android:layout_height="@dimen/dp_26"
             android:id="@+id/obligation_but_cancel"
             android:layout_below="@id/all_linea"
             android:text="取消订单"
             android:background="@drawable/all_indent_but_bg"
             android:textColor="#666666"
             android:layout_marginLeft="@dimen/dp_10"
             android:layout_marginBottom="@dimen/dp_10"
             />
         <Button
             android:layout_width="@dimen/dp_70"
             android:layout_height="@dimen/dp_26"
             android:id="@+id/obligation_indent_pay"
             android:layout_below="@id/all_linea"
              android:layout_marginLeft="@dimen/dp_230"
             android:background="@drawable/all_indent_butpay_bg"
             android:text="去支付"
             android:textColor="#ffff"
             android:layout_marginBottom="@dimen/dp_10"
             />
    </RelativeLayout>
</RelativeLayout>