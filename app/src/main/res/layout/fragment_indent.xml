<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/criclelistback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/recycle"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/imagelinar"
            >
        <Button
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@mipmap/quanbudd_ddf"
           android:layout_marginRight="@dimen/dp_22"
            android:id="@+id/indet_but_all"
            />
            <Button
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/daifuk_ddf"
                android:layout_marginRight="@dimen/dp_22"
                android:id="@+id/indet_but_obligation"
                />
            <Button
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/daishouh_ddf"
                android:layout_marginRight="@dimen/dp_22"
                android:id="@+id/indet_but_wait"
                />
            <Button
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/daipingj_ddf"
                android:layout_marginRight="@dimen/dp_22"
                android:id="@+id/indet_but_judge"
                />
            <Button
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/yiwanc_ddf"
                android:layout_marginRight="@dimen/dp_22"
                android:id="@+id/indet_but_completed"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagelinar"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_13"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="全部订单"
                android:layout_marginRight="@dimen/dp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="代付款"
                android:layout_marginRight="@dimen/dp_26"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="待收货"
                android:layout_marginRight="@dimen/dp_26"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="代评价"
                android:layout_marginRight="@dimen/dp_26"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="已完成"
                />

        </LinearLayout>

    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content"

        android:layout_below="@id/recycle"
        android:layout_centerHorizontal="true"
        android:id="@+id/intent_xrecycle"
        >
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>