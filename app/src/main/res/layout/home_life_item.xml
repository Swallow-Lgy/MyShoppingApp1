<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="200dp"
    android:layout_height="@dimen/dp_150"
    android:layout_marginLeft="@dimen/dp_24"

    >
    <RelativeLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/criclelistback"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_90"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:id="@+id/home_life_image"
            />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/home_life_image"
             android:maxLines="1"
             android:ellipsize="end"
             android:id="@+id/home_life_goodsname"
             android:layout_marginRight="@dimen/dp_10"
             android:layout_marginLeft="@dimen/dp_10"
             android:textSize="@dimen/sp_12"
             android:textColor="#666666"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/home_life_goodsprice"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"
            android:textColor="#ff00"
            android:layout_below="@id/home_life_goodsname"
            />
    </RelativeLayout>
</RelativeLayout>