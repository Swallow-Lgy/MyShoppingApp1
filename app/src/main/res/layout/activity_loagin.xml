<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    tools:context=".loaginreg.activity.LoginActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiao"
        android:text="跳转"
        />
    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/login_icon_phone"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_30"
        />
    <com.xw.repo.XEditText
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:id="@+id/phonenum"
        android:hint="手机号"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_163"
        android:textSize="@dimen/sp_18"
        android:maxLines="11"
        android:numeric="integer"

        />

    <TextView
        android:layout_width="@dimen/dp_300"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@id/phonenum"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        />
    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/login_icon_lock"
        android:layout_marginTop="@dimen/dp_230"
        android:layout_marginLeft="@dimen/dp_30"
        />
    <EditText
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="登录密码"
        android:textColorHint="#ffff"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_233"
        android:layout_marginLeft="@dimen/dp_80"
        android:textSize="@dimen/sp_18"
        android:textColor="#fff"
        android:inputType="number"
        android:password="true"
        />
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_toRightOf="@id/password"
        android:src="@mipmap/login_icon_eye"
        android:layout_marginTop="@dimen/dp_240"
        android:id="@+id/login_icon_eye"
        />
    <TextView
        android:layout_width="@dimen/dp_300"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@id/password"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/line"
        />
      <CheckBox
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/login_remcheck"
          android:layout_below="@id/line"
          android:layout_marginLeft="@dimen/dp_30"
          android:layout_marginTop="@dimen/dp_20"
          android:textSize="@dimen/dp_14"
          android:textColor="#fff"
          android:buttonTint="#fff"
          android:text="记住密码"
          />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/login_remcheck"
         android:layout_below="@id/line"
         android:layout_marginLeft="@dimen/dp_160"
         android:text="快速注册"
         android:layout_marginTop="@dimen/dp_23"
         android:textColor="#fff"
         android:textSize="@dimen/sp_14"
         android:id="@+id/reg_text"
         />
      <Button
          android:layout_width="@dimen/dp_280"
          android:layout_height="@dimen/dp_40"
          android:layout_below="@id/login_remcheck"
          android:layout_marginTop="@dimen/dp_80"
          android:layout_marginLeft="@dimen/dp_40"
          android:text="登录"
          android:textColor="#ff5f71"
          android:background="@drawable/login_text_bacground"
          android:id="@+id/login_button"
          />
</RelativeLayout>